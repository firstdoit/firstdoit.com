<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>{{meta_title}}</title>
    <meta name="description" content="{{@blog.description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no" />

    <link rel="stylesheet" type="text/css" href="{{asset "style/normalize.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "highlight/styles/github.css"}}">
    <link rel="stylesheet" type="text/css" href="{{asset "could-you-possibly-0.1.1/style/could-you-possibly.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "style/screen.css"}}" />

    {{#if pagination.next}}<link href="{{page_url pagination.next}}" rel="prefetch" />{{/if}}

    <!-- Google Authorship and Publisher Markup -->
    <link rel="author" href="https://plus.google.com/+GuilhermeRodrigues90/posts"/>
    <link rel="publisher" href="https://plus.google.com/+GuilhermeRodrigues90"/>

    <!--Google+ Schema.org meta-->
    <meta itemprop="name" content="{{meta_title}}">
    <meta itemprop="description" content="{{@blog.description}}">
    <meta itemprop="image" content="{{@blog.url}}{{@blog.logo}}">

    <!--Twitter meta-->
    <meta name="twitter:card" content="summary">
    <meta name="twitter:site" content="@first_doit">
    <meta name="twitter:title" content="{{meta_title}}">
    <meta name="twitter:description" content="{{@blog.description}}">
    <meta name="twitter:creator" content="@first_doit">

    <!--Facebook meta-->
    <meta property="og:image" content="{{@blog.url}}{{@blog.logo}}"/>
    <meta property="og:site_name" content="{{meta_title}}"/>
    <meta property="og:type" content="blog"/>
    <meta property="og:description" content="{{@blog.description}}" />
    {{#if post}}
    {{#post}}
    <meta property="og:title" content="{{title}}"/>
    <meta property="og:url" content="{{url absolute="true"}}"/>
    {{/post}}
    {{else}}
    <meta property="og:title" content="{{meta_title}}"/>
    <meta property="og:url" content="{{@blog.url}}"/>
    {{/if}}

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-42473058-2', 'auto');
        ga('send', 'pageview');

    </script>

    {{ghost_head}}
</head>
<body class="{{body_class}}">

    {{> header}}

    {{{body}}}

    {{> footer}}

    {{ghost_foot}}

    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js"></script>
    <script type="text/javascript" src="{{asset "script/main.js"}}"></script>
    <script type="text/javascript" src="{{asset "highlight/highlight.pack.js"}}"></script>
    <script type="text/javascript" src="{{asset "could-you-possibly-0.1.1/script/could-you-possibly.min.js"}}"></script>
    <script>
        (function(){
            $(function(){
                var options = {
                    selector: 'section.share',
                    url: '{{#post}}{{url absolute="true"}}{{/post}}',
                    title: '{{#post}}{{title}}{{/post}}',
                    author: 'first_doit'
                };
                new CouldYouPossibly(options);
            });
        })();
    </script>
    <script>
        if ("{{settings.env}}" === "development") {
            document.write('<script src="http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1"></' + 'script>')
        }
    </script>
</body>
</html>
